<?xml version="1.0"?>
<launch>

	<arg name="case_raw" default="false"/>
	<arg name="case_bezier" default="false"/>
	<arg name="case_downsampling" default="false"/>
	<arg name="p_control" default="true"/>
	<arg name="keypoints" default="false" />
	<arg name="sim" default="false"/>
	<arg name="live_camera" default="true"/>
	<arg name="gazebo" default="false"/>
	
	<!-- Launch openpose -->
	<group unless="$(arg keypoints)" >
		<include file="$(find openpose_utils_launch)/launch/pipeline_launch.launch">
			<arg name="sim" default="$(arg sim)"/>
			<arg name="live_camera" default="$(arg live_camera)"/>
			<arg name="marker" value="true"/>
		</include>
	</group>

	<!-- Raw openpose process -->
	<group if="$(arg case_raw)">
		<node name="raw_points_process" type="raw_points_process.py" pkg="real_time_trajectory_process" respawn="false" output="log">
		</node>
	</group>
 
	<!-- Piecewise Bezier process -->
	<group if="$(arg case_bezier)">
		 <node name="piecewise_bezier_process" type="piecewise_bezier_process.py" pkg="real_time_trajectory_process" respawn="false" output="screen">
		</node> 
		
		<include file="$(find offline_trajectory_process)/launch/trajectory_smoothing.launch">
		</include>
	</group>

	<!-- Downsampling-Interpolation process -->
	<group if="$(arg case_downsampling)">		
		<node name="downsampling_interpolation_process" type="downsampling_interpolation_process.py" pkg="real_time_trajectory_process" respawn="false" output="screen">
		</node>
	</group>
	
	<!-- Robot trajectory construction -->
	<include file="$(find ur3_trajectory_process)/launch/ur3_trajectory_process.launch">
	</include>

	<!-- control framework -->
	<include file="$(find cartesian_trajectory_tracking)/launch/cartesian_trajectory_tracking.launch">
		<arg name="p_control" default="$(arg p_control)"/>
		<arg name="gazebo" default="$(arg gazebo)"/>
	</include>

</launch>
